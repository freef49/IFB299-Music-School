<% provide(:title, "Book Lesson") %>
<h1>New Lesson Booking</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
  <%= form_for(@lessons) do |f| %>
  
  <%= f.hidden_field :student_email, :value => current_user.email, class: 'form-control'%>
  <%= f.hidden_field :user_id, :value => current_user.id, class: 'form-control' %>
  
  <%= f.label :user_email, "Teacher Email" %>
  <%= f.collection_select :user_email, User.where(:teacher => true), :email, :email, multiple: false, class: 'form-control' %>
  
  <%= f.label :start_date %>
  <%= f.date_field :start_date, class: 'form-control', placeholder: "11/11/2016"%>
  
  <%= f.label :end_date %>
  <%= f.date_field :end_date, class: 'form-control', placeholder: "11/11/2016"%>
  
  <%= f.label :day %>
  <%= f.select :day, options_for_select(["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]), class: 'form-control'%>
  
  <%= f.label :lesson_time %>
  <%= f.text_field :lesson_time, class: 'form-control', placeholder: "HH:MM"%>
  
  <%= f.label :lesson_type %>
  <%= f.collection_select :lesson_type, User.where(:teacher => true), :teacher_qualifications, :teacher_qualifications, multiple:false, clase: 'form-control'%>
  
  
  <%= f.submit "Create Lesson", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>


