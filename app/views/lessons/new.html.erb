<% provide(:title, "Book Lesson") %>
<h1>New Lesson Booking</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
  <%= form_for(@lessons) do |f| %>
  
  <%= f.hidden_field :student_email, :value => current_user.email, class: 'form-control'%>
  <%= f.hidden_field :user_id, :value => current_user.id, class: 'form-control' %>
  <%= f.hidden_field :user_email, :value =>params[:teacher], class: 'form-control' %>
  
  
  
  <%= f.label :start_date %>
  <%= f.date_field :start_date, class: 'form-control', placeholder: "11/11/2016"%>
  
  <%= f.label :end_date %>
  <%= f.date_field :end_date, class: 'form-control', placeholder: "11/11/2016"%>
  
  <%= f.label :day %>
  <%= f.collection_select :day,  Availability.where(user_email: params[:teacher]), :day, :day, multiple:false, clase: 'form-control'%>
  
  
  <%= f.label :lesson_time, 'Time(8:00-16:30) half hour increment only' %>
  <%= f.text_field :lesson_time, class: 'form-control', placeholder: "HH:MM"%>
  
  <%= f.label :lesson_type %>
  <%= f.collection_select :lesson_type,  Skill.where(user_email: params[:teacher]), :instrument, :instrument, multiple:false, clase: 'form-control'%>
                                        
    
  <%= f.submit "Create Lesson", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>


