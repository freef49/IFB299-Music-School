<!--HTML for the header of each page. Needs to be altered after wireframes are completed -->

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container navigation-bar">

    <a href="/"><div id="logo"></div></a>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
        <li><%= link_to "About",   about_path %></li>
        
        <% if logged_in? %>
          <li><%= link_to "Timetable", timetable_path %></li>
        <% end %>
        
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Users <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if logged_in? %>
              <li><%= link_to "Students", students_path %></li>
              <% end %>
              <li><%= link_to "Teachers", teachers_path %></li>
            </ul>
          </li>
          
          <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <% if !current_user.teacher? && !current_user.admin?%>
                <li><%= link_to "My Preferences", my_preferences_path %></li>
                <li><%= link_to "Free Play Room", current_sessions_path %></li>
              <% end %>
              <li><%= link_to "My Timetable", my_lessons_path%></li>
              <% if current_user.teacher? && !current_user.admin? %>
                <li><%= link_to "My Availability", my_availabilities_path %></li>
                <li><%= link_to "My Skills", my_skills_path %></li>
              <% end %>
              <% if current_user.admin? %>
                <li><%= link_to "My Interviews", my_interviews_path %></li>
              <% end %>
              <li><%= link_to "Edit Personal Details", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>